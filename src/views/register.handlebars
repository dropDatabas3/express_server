<main>
  <div id="formContainer">
    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input
          type="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          placeholder="Enter email"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Role</label>
        <input
          type="number"
          class="form-control"
          id="exampleInputRole"
          aria-describedby="emailHelp"
          placeholder="Enter your role"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Photo</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputPhoto"
          placeholder="Enter your photo"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
          placeholder="Password"
        />
      </div>
      <button class="btn btn-primary" id="registerBtn">Register</button>
    </form>
  </div>
</main>
<script>
    document.getElementById('registerBtn').addEventListener('click', async function(event) {
        event.preventDefault()
        var email = document.getElementById('exampleInputEmail1').value;
        var role = document.getElementById('exampleInputRole').value;
        var photo = document.getElementById('exampleInputPhoto').value;
        var password = document.getElementById('exampleInputPassword1').value;
        var data = {
            email: email,
            role: role,
            photo: photo,
            password: password
        };
        const options = {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        }
        let response = await fetch("/api/sessions/register", options)
        response = await response.json();
        console.log(response)
        if(response.statusCode === 201){
          location.replace("/users/login")
        }else{
          alert(response.message)
        }
    });
</script>








