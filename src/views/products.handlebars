<main>
    <h1 class="p-2 text-center w-100" id="title">
        Productos
    </h1>
    <section class="d-flex flex-wrap justify-content-center align-items-center m-3">
        {{#each products}}
            <div class="card col-lg-2 col-md-3 col-sm-4 mb-3 mx-2 rem-8" id="card">
                <img src={{photo}} class="card-img-top" alt="">
                <div class="card-body d-flex flex-column align-items-stretch" id="card-body">
                    <h5 class="card-title pt-2 text-center">{{title}}</h5>
                    <p class="card-text p-2 text-end">${{price}}</p>
                </div>
            </div>
        {{/each}}
    </section>
</main>
<!-- {{photo}}-->
<style>
    #title  {
        background-color:#FEB272; 
        color: #fff; 
        font-weight: 600;
        text-shado
        w: 1px 1px 1px #000;
    }
    .card-title {
        height: 2rem; /* Asegura que todas las tarjetas tengan al menos la misma altura */
    }
</style>

