<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { min-height: 100vh; display: flex; flex-direction: column; background-color: #f8f9fa; }
      #title {
        background-color: #FD9843;
        color: white;
        font-weight: bold;
        padding: 10px 0;
        text-shadow: 1px 1px 2px #000;
        margin-bottom: 20px;
      }
      .card {
        margin: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        cursor: pointer;
      }
      .card:hover {
        transform: scale(1.05);
      }
      .card-img-top {
        height: 200px;
        object-fit: cover;
      }
      .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
        margin: 0.5rem 0;
      }
      .card-text {
        font-size: 1rem;
        color: #555;
        margin-bottom: 0.5rem;
      }
      .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }
      .pagination a {
        margin: 0 10px;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #FD9843;
        color: white;
        text-decoration: none;
        box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s;
      }
      .pagination a:hover {
        background-color: #e6803c;
      }
      .pagination span {
        margin: 0 10px;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #f1f1f1;
        box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body>
    <main>
      <h1 class="text-center w-100" id="title">Productos</h1>
      <section class="container">
        <div class="row justify-content-center">
          {{#each products}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
              <div class="card h-100 " onclick="showDetail('{{this._id}}')">
                <img src="{{this.photo}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body d-flex flex-column align-items-stretch">
                  <h5 class="card-title text-center">{{this.title}}</h5>
                  <p class="card-text text-end">${{this.price}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </section>
      {{#if pagInfo}}
        <div class="pagination">
          {{#if pagInfo.hasPrevPage}}
            <a href="/products?page={{pagInfo.PrevPage}}" class="btn btn-secondary">Página anterior</a>
          {{/if}}
          <span>Página {{pagInfo.page}}</span>
          {{#if pagInfo.hasNextPage}}
            <a href="/products?page={{pagInfo.NextPage}}" class="btn btn-secondary">Página siguiente</a>
          {{/if}}
        </div>
      {{/if}}
    </main>

    <script>
      function showDetail(id) {
        window.location.href = `/products/${id}`;
      }
    </script>
  </body>
</html>
